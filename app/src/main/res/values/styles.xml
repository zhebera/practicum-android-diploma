<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    Text font styles-->
    <style name="YsDisplayBold">
        <item name="android:layout_height">38dp</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textSize">@dimen/very_large_text_size</item>
        <item name="android:fontWeight">700</item>
    </style>

    <style name="YsDisplayMedium">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
    </style>

    <style name="YsDisplayMedium.Large">
        <item name="android:layout_height">26dp</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="YsDisplayMedium.Medium">
        <item name="android:layout_height">19dp</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="YsDisplayRegular">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="YsDisplayRegular.Medium">
        <item name="android:layout_height">19dp</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="YsDisplayRegular.Small">
        <item name="android:layout_height">16dp</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>
    <!--    Button styles-->
    <style name="ButtonStyle" parent="YsDisplayMedium.Medium">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_marginHorizontal">17dp</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ButtonStyle.On">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_background_on</item>
    </style>

    <style name="ButtonStyle.Off">
        <item name="android:textColor">@color/red</item>
        <item name="android:background">@drawable/button_background_off</item>
    </style>
    <!--    Card vacancy text styles-->
    <style name="CardTextViewStyleTop" parent="YsDisplayMedium.Large">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="CardTextViewStyleBottom" parent="YsDisplayRegular.Medium">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <!--    BottomNavigationView styles-->
    <style name="BottomNavigationView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/bottom_navigation_view_height</item>
        <item name="android:background">?attr/colorOnPrimary</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="itemIconTint">@color/bottom_navigation_color</item>
        <item name="itemTextColor">@color/bottom_navigation_color</item>
        <item name="android:font">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>
    <!--    EditText Styles-->
    <style name="EditText" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edit_text_height</item>
        <item name="android:background">@drawable/rounded_edit_text</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">?attr/colorPrimary</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:maxLength">60</item>
        <item name="android:paddingHorizontal">@dimen/edit_text_padding_horizontal</item>
        <item name="android:hint">@string/input_hint</item>
        <item name="cornerRadius">@dimen/edit_text_corner_radius</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:layout_marginStart">@dimen/fragment_search_margin_start</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:drawableTint">?attr/colorPrimary</item>
    </style>
    <!--    TextHint Styles-->
    <style name="TextHint">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/grey</item>
    </style>
    <!--    TextInputLayout Styles-->
    <style name="TextInputLayout" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="android:textColorHint">?attr/colorPrimary</item>
        <item name="boxBackgroundColor">?attr/colorOnSecondary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxCornerRadiusTopStart">@dimen/box_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/box_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/box_corner_radius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/box_corner_radius</item>
        <item name="placeholderTextAppearance">@color/grey</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="hintTextColor">@color/blue</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="hintTextAppearance">@style/TextHint</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>
    <!--    TextInputEditText Styles-->
    <style name="TextInputEditText" parent="Widget.Material3.TextInputLayout.FilledBox">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/text_input_edit_text_height</item>
        <item name="android:maxLines">1</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="android:textColorHighlight">@color/grey</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:inputType">number</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="hintTextAppearance">@style/TextHint</item>
        <item name="hintEnabled">false</item>
    </style>
    <!--    ImageViewPlaceholderSearch Styles-->
    <style name="ImageViewPlaceholderSearch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <!--    TextViewPlaceholderSearch Styles-->
    <style name="TextViewPlaceholderSearch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">22sp</item>
    </style>
</resources>
